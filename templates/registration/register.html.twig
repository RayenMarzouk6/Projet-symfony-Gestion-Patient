{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .h-screen {
            height: 100vh;
        }

        .login_img_section {
            background: linear-gradient(rgba(2,2,2,.7), rgba(0,0,0,.7)), url('https://media.istockphoto.com/id/941854852/photo/friendly-smiling-young-female-doctor-pointing-with-finger-to-the-copy-spase-for-something.jpg?s=170667a&w=0&k=20&c=emO0Ze_cYsGB7a_i1EJ6mIVPBUojGhknrtko8pX562Q=');
            background-size: cover;
            background-position: center;
        }

        * {
            border: none;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="h-screen flex">
        <div class="flex w-full lg:w-1/2 justify-center items-center bg-white space-y-8">
            <div class="w-full px-8 md:px-32 lg:px-24">
                <form class="bg-white rounded-md shadow-2xl p-5" method="post" action="{{ path('app_register') }}">
                    <h1 class="text-gray-800 font-bold text-2xl mb-1">Hello To Our Web Site ðŸ‘€ !</h1>
                    <img src="{{ asset('img/logo.png') }}" alt="" width="320px">
                    <br><br><br><br>

                    {{ form_start(registrationForm) }}

                    {{ form_errors(registrationForm) }}

                    <div class="flex items-center border-2 mb-8 py-2 px-3 rounded-2xl">
                        <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                            <path fill-rule="evenodd" d="M7 2a2 2 0 0 0-2 2v1a1 1 0 0 0 0 2v1a1 1 0 0 0 0 2v1a1 1 0 1 0 0 2v1a1 1 0 1 0 0 2v1a1 1 0 1 0 0 2v1a2 2 0 0 0 2 2h11a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H7Zm3 8a3 3 0 1 1 6 0 3 3 0 0 1-6 0Zm-1 7a3 3 0 0 1 3-3h2a3 3 0 0 1 3 3 1 1 0 0 1-1 1h-6a1 1 0 0 1-1-1Z" clip-rule="evenodd"/>
                        </svg>
                        {{ form_widget(registrationForm.nomP, { 'attr': { 'class': 'pl-2 w-full outline-none border-none', 'placeholder': 'Last Name' } }) }}
                        {{ form_errors(registrationForm.nomP) }}
                    </div>

                    <div class="flex items-center border-2 mb-8 py-2 px-3 rounded-2xl">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                        </svg>
                        {{ form_widget(registrationForm.prenomP, { 'attr': { 'class': 'pl-2 w-full outline-none border-none', 'placeholder': 'First Name' } }) }}
                        {{ form_errors(registrationForm.prenomP) }}
                    </div>

                    <div class="flex items-center border-2 mb-8 py-2 px-3 rounded-2xl">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
                        </svg>
                        {{ form_widget(registrationForm.numTel, { 'attr': { 'class': 'pl-2 w-full outline-none border-none', 'placeholder': 'Phone Number' } }) }}
                        {{ form_errors(registrationForm.numTel) }}
                    </div>

                    <div class="flex items-center border-2 mb-8 py-2 px-3 rounded-2xl">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                        </svg>
                        {{ form_widget(registrationForm.email, { 'attr': { 'class': 'pl-2 w-full outline-none border-none', 'placeholder': 'Email Address' } }) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>

                    <div class="flex items-center border-2 mb-12 py-2 px-3 rounded-2xl">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
                        </svg>
                        {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'pl-2 w-full outline-none border-none', 'placeholder': 'Password' } }) }}
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>

                    <div class="flex items-center border-2 mb-12 py-2 px-3 rounded-2xl">
                        {{ form_widget(registrationForm.agreeTerms) }}
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>

                    <button type="submit" class="block w-full bg-indigo-600 mt-5 py-2 rounded-2xl hover:bg-indigo-700 hover:-translate-y-1 transition-all duration-500 text-white font-semibold mb-2">Create Account</button>

                    {{ form_end(registrationForm) }}
                </form>
            </div>
        </div>
        <div class="hidden lg:flex w-full lg:w-1/2 login_img_section justify-around items-center">
            <div class="bg-black opacity-20 inset-0 z-0"></div>
            <div class="w-full mx-auto px-20 flex-col items-center space-y-6">
                <div class="flex justify-center lg:justify-start mt-6">
                </div>
            </div>
        </div>
    </div>
{% endblock %}
