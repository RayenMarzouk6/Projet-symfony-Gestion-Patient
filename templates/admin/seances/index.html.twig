{% extends 'base.html.twig' %}

{% block title %}Seances index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5 mb-4">Seances index</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">DateSoin</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for seance in seances %}
                    <tr>
                        <td>{{ seance.id }}</td>
                        <td>{{ seance.DateSoin ? seance.DateSoin|date('Y-m-d') : '' }}</td>
                        <td>
                            <a href="{{ path('app_seances_show', {'id': seance.id}) }}" class="btn btn-sm btn-primary me-1">Show</a>
                            <a href="{{ path('app_seances_edit', {'id': seance.id}) }}" class="btn btn-sm btn-secondary">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_seances_new') }}" class="btn btn-primary">Create new</a>
    </div>
{% endblock %}
