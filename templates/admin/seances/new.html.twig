{% extends 'base.html.twig' %}

{% block title %}New Seances{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>

        .card {
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
        }
        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }
        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card mt-5">
                    <div class="card-header">
                        <h1 class="card-title">Create New Seances</h1>
                    </div>
                    <div class="card-body">
                        {{ include('seances/_form.html.twig') }}
                        <a href="{{ path('app_seances_index') }}" class="btn btn-secondary mt-3">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
