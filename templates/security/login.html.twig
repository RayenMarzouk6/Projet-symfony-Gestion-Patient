{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .h-screen {
            height: 100vh;
        }
        .login_img_section {
            background: linear-gradient(rgba(2,2,2,.7),rgba(0,0,0,.7)), url('https://th.bing.com/th/id/OIP.1aGQLbJfXU8IUR5E8A1cZwHaE7?rs=1&pid=ImgDetMain');
            background-size: cover; /* Réglage pour ajuster la taille de l'image */
            background-position: center; /* Centrer l'image horizontalement et verticalement */
        }
        * {
            border: none;
        }
    </style>
{% endblock %}


{% block body %}
<div class="h-screen flex">
    <div class="hidden lg:flex w-full lg:w-1/2 login_img_section justify-around items-center">
        <div class="bg-black opacity-20 inset-0 z-0"></div>
    </div>
    <div class="flex w-full lg:w-1/2 justify-center items-center bg-white space-y-8">
        <div class="w-full px-8 md:px-32 lg:px-24">
            <form method="post" action="{{ path('app_login') }}" class="bg-white rounded-md shadow-2xl p-5">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <h1 class="text-gray-800 font-bold text-2xl mb-1">Welcome Back! To Our Web Site <img src="{{ asset('img/logo.png') }}" alt=""></h1>
                <br>
                <br>
                <div class="flex items-center border-2 mb-8 py-2 px-3 rounded-2xl">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                    </svg>
                    <input autocomplete="email" id="inputEmail" class="pl-2 w-full outline-none border-none" value="{{ last_username }}" type="email" name="email" placeholder="Email Address" class="form-control" required autofocus >
                </div>
                <div class="flex items-center border-2 mb-12 py-2 px-3 rounded-2xl">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fillRule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clipRule="evenodd" />
                    </svg>
                    <input id="inputPassword" class="pl-2 w-full outline-none border-none" type="password" name="password" placeholder="Password" autocomplete="current-password" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="block w-full bg-indigo-600 mt-5 py-2 rounded-2xl hover:bg-indigo-700 hover:-translate-y-1 transition-all duration-500 text-white font-semibold mb-2" type="submit">Se connecter</button>
                <div class="flex justify-between mt-4">
                    <span class="text-sm ml-2 hover:text-blue-500 cursor-pointer hover:-translate-y-1 duration-500 transition-all">Mot de passe oublié ?</span>
                    <a href="{{ path('app_register') }}" class="text-sm ml-2 hover:text-blue-500 cursor-pointer hover:-translate-y-1 duration-500">Vous n'avez pas de compte ?</a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
